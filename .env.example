# General Configuration for Asteria Home Server
# Non-sensitive environment variables - EXAMPLE FILE
# Copy this to .env and fill in your actual values

# Global Settings
TZ=Europe/London
SERVER_NAME=asteria

# Network Storage
NETWORK_STORAGE_PATH=/srv/storage

# Network Configuration  
LOCAL_NETWORK=192.168.0.0/24
DNS_SERVER_IP=192.168.0.1

# Watchtower Settings
WATCHTOWER_SCHEDULE=0 0 2 * * *
WATCHTOWER_CLEANUP=true

# Service Ports (for reference)
ADGUARD_PORT=3000
CADDY_HTTP_PORT=80
CADDY_HTTPS_PORT=443
HOMEASSISTANT_PORT=8123
UPTIME_KUMA_PORT=3001
PORTAINER_PORT=9000

# User/Group IDs (for file permissions)
PUID=1001
PGID=3001

# Tailscale Configuration
BASE=/mnt/skypaw-core
TS_STATE_SUFFIX=primary
TS_AUTHKEY=your_actual_tailscale_auth_key_here
TS_HOSTNAME=asteria
TS_ARGS=--advertise-routes=192.168.0.0/24

# AdGuard Configuration  
ADGUARD_ADMIN_PASSWORD=your_secure_adguard_password

# Caddy Configuration
CADDY_EMAIL=your_email@example.com

# Home Assistant Configuration
HOMEASSISTANT_TOKEN=your_homeassistant_long_lived_access_token
HA_API_PASSWORD=your_ha_api_password

# Mosquitto MQTT Configuration
MOSQUITTO_USERNAME=mqttuser
MOSQUITTO_PASSWORD=your_secure_mqtt_password

# Watchtower Configuration
WATCHTOWER_NOTIFICATION_SLACK_HOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
EMAIL_PASSWORD=your_email_app_password
